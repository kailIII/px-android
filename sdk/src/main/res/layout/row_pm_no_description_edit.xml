<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height_large"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:background="@color/mpsdk_white"
    android:minHeight="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:maxHeight="30dp"
            android:src="@drawable/serfin_bank_transfer"
            android:adjustViewBounds="true"
            android:id="@+id/paymentMethodImage"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/paymentMethodComment" />

        <TextView
            android:id="@+id/paymentMethodComment"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hola, soy un comentario"
            style="@style/mpsdk_list_label_comment"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/paymentMethodImage"
            android:layout_alignLeft="@+id/paymentMethodImage"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:adjustViewBounds="true"
            android:id="@+id/imageEdit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:tint="@color/mpsdk_colorPrimary"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>
</LinearLayout>
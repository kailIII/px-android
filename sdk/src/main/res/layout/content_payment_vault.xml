<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/activity_payment_vault"
        tools:context="com.mercadopago.PaymentVaultActivity">

        <include layout="@layout/shopping_cart" android:id="@+id/itemInfoLayout"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_layout"
            android:orientation="vertical"
            android:layout_below="@+id/itemInfoLayout">
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mpsdk_payment_method_preferred_label"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/preferredLabel"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/preferredList"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="alwaysScroll"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:divider="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/mpsdk_payment_method_groups_label"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/groupsLabel"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/groupsList"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="alwaysScroll"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:divider="@null"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>